;; -*- scheme -*-

(compile -s -O2 -d0 -c++ -X r7rs -R r7rs -J libola.sld
         -L "`pkg-config --libs libola`"
         -C "-Wno-write-strings")
(compile -s -O2 -d0 -c++ -X r7rs -R r7rs libola.import.scm
         -L "`pkg-config --libs libola`"
         -C "-Wno-write-strings")

(install-extension
    'libola
  '("libola.so" "libola.import.so")
  '((version 0.1)))
